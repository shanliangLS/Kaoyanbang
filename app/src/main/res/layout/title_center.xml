<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/bg_skf"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/title_back_image"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp" 
        android:src="@drawable/back"/>

    <ImageView
        android:id="@+id/title_add_image"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:src="@drawable/add" />

    <LinearLayout
        android:id="@+id/common_constact"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/title_center_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_center_left"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/title_btn_left"
            android:text="全部"
            android:textColor="@drawable/title_text_font"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_center_right"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/title_btn_right"
            android:text="我的"
            android:textColor="@drawable/title_text_font"
            android:textSize="16sp"/>
    </LinearLayout>

</RelativeLayout>