<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/player_toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#ffffff"
            android:textSize="@dimen/player_toolbar"
            android:text="@string/player_toolbar_1" />

        <Button
            android:id="@+id/player_toolbar_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/themeColor" />
        <Button
            android:id="@+id/player_toolbar_line_gray1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/themeColor" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/player_toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#ffffff"
            android:textSize="@dimen/player_toolbar"
            android:text="@string/player_toolbar_2" />

        <Button
            android:id="@+id/player_toolbar_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPlayerToolbar" />
        <Button
            android:id="@+id/player_toolbar_line_gray2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPlayerToolbarFalseGray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/player_toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#ffffff"
            android:textSize="@dimen/player_toolbar"
            android:text="@string/player_toolbar_3" />

        <Button
            android:id="@+id/player_toolbar_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPlayerToolbar" />
        <Button
            android:id="@+id/player_toolbar_line_gray3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPlayerToolbarFalseGray" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/player_toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#ffffff"
            android:textSize="@dimen/player_toolbar"
            android:text="@string/player_toolbar_4" />

        <Button
            android:id="@+id/player_toolbar_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPlayerToolbar" />
        <Button
            android:id="@+id/player_toolbar_line_gray4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPlayerToolbarFalseGray" />
    </LinearLayout>

</LinearLayout>
